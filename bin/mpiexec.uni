#!/bin/sh
if  [ $1 =  "-hosts" ]; then
shift ; shift
fi
if [ $1 !=  "-np" -a $1 != "-n" ]; then
progname=$*
elif  [ $2 =  "1" ]; then
shift ; shift
progname=$*
else
echo "Uniprocessor version of MPI can only use one processor"
exit 1
fi

# Execute the program
$progname
if [ $? = "0" ]; then
  exit 0
else
  exit 1
fi
